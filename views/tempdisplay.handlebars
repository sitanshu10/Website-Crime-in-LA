{{#if first}}
<div class="chart">
  <canvas id="chart-report" width="300" height="100"></canvas>
</div>

<script>

   var ctx = document.getElementById('chart-report').getContext('2d');

    var chart = new Chart(ctx, {

      type: 'horizontalBar',

      data: {

        labels: ['77th Street', 'Central', 'Devonshire', 'Foothill', 'Harbor',
                       'Hollenbeck', 'Hollywood', 'Mission', 'N Hollywood',
                     'Newton', 'Northeast', 'Olympic', 'Pacific', 'Rampart', 'Southeast', 'Southwest', 'Topanga',
                     'Van Nuys', 'West LA', 'West Valley', 'Wilshire'],
        datasets: [
        {
        label: "Number of Crimes",
        fontSize: '40',
        borderColor: '#ff003f',
        backgroundColor: 'navy',
        data: [{{first}}]

      }
        ]
      },
      options:{
        layout:{
          padding:10,
        },
        legend:{
          position:'bottom',
        },
        title:{
          display:true,
          text:'The displayed crimes are from {{startdate}} to {{enddate}} for {{starttime}} to {{endtime}} time of the day',
          fontSize: 30
        }
      }
    });
</script>
{{/if}}
